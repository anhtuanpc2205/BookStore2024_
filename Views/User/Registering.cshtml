@{
    ViewData["Title"] = "Register";
    Layout = "_MainLayout";
}
@model BookStore2024.ViewModels.RegisterVM

@section externalCSS {
    <style>
        .testbox h1 {
            text-align: center;
        }

        .icon {
            padding: 10px;
            min-width: 40px;
            text-align: center;
        }

        .gender {
            margin-bottom: 15px;
        }

        .radio {
            display: inline-block;
            margin-right: 20px;
        }

        .button {
            display: block;
            width: 60%;
            padding: 10px;
            margin-top: 20px;
            color: #fff;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            align-content: center;
        }
    </style>
}
<div class="tg-innerbanner tg-haslayout tg-parallax tg-bginnerbanner" data-z-index="-100" data-appear-top-offset="600" data-parallax="scroll" data-image-src="../images/parallax/bgparallax-07.jpg">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="tg-innerbannercontent">
                    <h1>Registration</h1>
                    <ol class="tg-breadcrumb">
                        <li><a href="javascript:void(0);">home</a></li>
                        <li class="tg-active">Registration</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="testbox">
        <h1>Registration</h1>
        <form action="/" class="form-horizontal">
            <div class="form-group">
                <label for="email" class="control-label col-sm-2 icon"><i class="glyphicon glyphicon-envelope"></i></label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="name" class="control-label col-sm-2 icon"><i class="glyphicon glyphicon-user"></i></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="control-label col-sm-2 icon"><i class="glyphicon glyphicon-lock"></i></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
            </div>
            <div class="form-group gender">
                <label class="control-label col-sm-2">Gender</label>
                <div class="col-sm-10">
                    <label class="radio-inline"><input type="radio" name="gender" value="male" checked> Male</label>
                    <label class="radio-inline"><input type="radio" name="gender" value="female"> Female</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <p>By clicking Register, you agree to our <a href="#">terms and conditions</a>.</p>
                    <button type="button" class="btn btn-primary btn-lg" style="margin-top: 10px;">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>



