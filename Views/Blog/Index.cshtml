
@{
    ViewData["Title"] = "News and Blogs";
    Layout = "_ProductsList";
}

@model IEnumerable<BookStore2024.ViewModels.BlogVM>

@section BreadCrumb {
	<div class="tg-innerbanner tg-haslayout tg-parallax tg-bginnerbanner" data-z-index="-100" data-appear-top-offset="600" data-parallax="scroll" data-image-src="images/parallax/bgparallax-07.jpg">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<div class="tg-innerbannercontent">
						<h1>News &amp; Blogs</h1>
						<ol class="tg-breadcrumb">
							<li><a href="javascript:void(0);">home</a></li>
							<li class="tg-active">News</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</div>
}
<div class="tg-newsgrid">
	<div class="tg-sectionhead">
		<h2><span>Latest News &amp; Blogs</span>Hot News &amp; Blogs</h2>
	</div>
	<div class="row">
		@foreach(var item in Model)
		{
			<div class="col-xs-6 col-sm-12 col-md-6 col-lg-4">
				<article class="tg-post">
					<figure><a asp-action="Detail" asp-controller="Blog" asp-route-DetailId="@item.BlogId"><img src="@item.ImgUrl" alt="Blog img"></a></figure>
					<div class="tg-postcontent">
						<ul class="tg-bookscategories">
							<li><a href="javascript:void(0);">@item.BlogDescription</a></li>
						</ul>
						<div class="tg-posttitle">
							<h3><a asp-action="Detail" asp-controller="Blog" asp-route-DetailId="@item.BlogId">@item.BlogTitle</a></h3>
						</div>
						<span class="tg-bookwriter">By: <a href="javascript:void(0);">@item.AuthorName</a></span>
						<ul class="tg-postmetadata">
							<li><a href="javascript:void(0);"><i class="fa fa-eye"></i><i>@item.Views Views</i></a></li>
						</ul>
					</div>
				</article>
			</div>
		}
	</div>
</div>