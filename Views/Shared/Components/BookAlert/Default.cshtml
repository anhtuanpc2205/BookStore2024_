@model BookStore2024.ViewModels.BookAlertVM

@if(Model.PageNumber == 1) // hiển thị ở các trang products
{
    <div class="tg-sectionhead">
        <h2><span>People’s Choice</span>Bestselling Books</h2>
    </div>
    <div class="tg-featurebook alert" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="tg-featureditm">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 hidden-sm hidden-xs">
                    <figure>
                        @* <img src="@item.BookImageUrl" alt="BookImage" style="width: 220px !important; height: 298px !important;"> *@
                        <img src="@Model.ProductsBannerImageUrl" alt="image description">
                    </figure>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <div class="tg-featureditmcontent">
                        <div class="tg-themetagbox"><span class="tg-themetag">HOT</span></div>
                        <div class="tg-booktitle">
                            <h3><a asp-action="Detail" asp-controller="Products" asp-route-DetailId="@Model.BookDetailId">@Model.BookTitle</a></h3>
                        </div>
                        <span class="tg-bookwriter">By: <a href="javascript:void(0);">@Model.AuthorName</a></span>
                        <span class="tg-stars"><span></span></span>
                        <div class="tg-priceandbtn">
                            <span class="tg-bookprice">
                                @if (Model.Discount != 0)
                                {
                                    <ins>$@(Model.Price - Model.Discount)</ins>
                                    <del>$@Model.Price</del>
                                }
                                @if (Model.Discount == 0)
                                {
                                    <ins>$@Model.Price</ins>
                                }
                            </span>
                            <a class="tg-btn tg-btnstyletwo tg-active btn-add-tocart" asp-action="AddtoCart" asp-controller="Cart" asp-route-productDetailId="@Model.BookDetailId">
                                <i class="fa fa-shopping-basket"></i>
                                <em>Add To Cart</em>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else //hiển thị ở home page
{
    <section class="tg-bglight tg-haslayout">
        <div class="container">
            <div class="row">
                <div class="tg-featureditm">
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 hidden-sm hidden-xs">
                        <figure><img src="@Model.HomeBannerImageUrl" alt="image description"></figure>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                        <div class="tg-featureditmcontent">
                            <div class="tg-themetagbox"><span class="tg-themetag">Hot!</span></div>
                            <div class="tg-booktitle">
                                <h3><a asp-action="Detail" asp-controller="Products" asp-route-DetailId="@Model.BookDetailId">@Model.BookTitle</a></h3>
                            </div>
                            <span class="tg-bookwriter">By: <a href="javascript:void(0);">@Model.AuthorName</a></span>
                            <span class="tg-stars"><span></span></span>
                            <div class="tg-priceandbtn">
                                <span class="tg-bookprice">
                                    @if (Model.Discount != 0)
                                    {
                                        <ins>$@(Model.Price - Model.Discount)</ins>
                                        <del>$@Model.Price</del>
                                    }
                                    @if (Model.Discount == 0)
                                    {
                                        <ins>$@Model.Price</ins>
                                    }
                                </span>
                                <a class="tg-btn tg-btnstyletwo tg-active btn-add-tocart" asp-action="AddtoCart" asp-controller="Cart" asp-route-productDetailId="@Model.BookDetailId">
                                    <i class="fa fa-shopping-basket"></i>
                                    <em>Add To Cart</em>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
